<% include ../partials/header %>
		<div class="row justify-content-center">
			<div class="col-md-12 text-center">
				<h1 class="text-capitalize">Edit <%= campground.name.toLowerCase() %></h1>
			</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control text-capitalize" id="name" type="text" value="<%= campground.name.toLowerCase() %>" name="name" required>
				</div>
				<div class="form-group">
					<label for="image">Image URL<span class="small"> Only images from unsplash are allowed</span></label>
					<input class="form-control" type="text" id="image" value="<%= campground.image %>" name="image" required>
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" id="price" value="<%= campground.price %>" name="price" min="0.00" required>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea rows="4" class="form-control" id="description" name="description" required><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn-primary btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id%>">Go Back</a>
		</div>
	</div>
<% include ../partials/footer %>