<% include ../partials/header %>
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a New Campground</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control text-capitalize" type="text" id="name" placeholder="Mount Rainier" name="name" required>
				</div>
				<div class="form-group">
					<label for="image">Image URL<span class="small"> Only images from unsplash are allowed</span></label>
					<input class="form-control" type="text" id="image" placeholder="https://images.unsplash.com/..." name="image" required>
					
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" id="price" placeholder="30" name="price" min="0.00" required>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea rows="4" class="form-control" id="description" placeholder="Spectacular place to camp and beautiful views to wake up to, highly recommend." name="description" required></textarea>
				</div>
				<div class="form-group">
					<button class="btn-primary btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
<% include ../partials/footer %>