<% include ../partials/header %>
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a New Campground</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control capitalize" type="text" id="name" placeholder="Mount Rainier" name="name">
				</div>
				<div class="form-group">
					<label for="image">Image URL</label>
					<input class="form-control" type="text" id="image" placeholder="https://images.unsplash.com/photo-1556354235-586dcf1dccc0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" name="image">
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" id="price" placeholder="15" name="price" min="0.00">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea class="form-control" id="description" placeholder="description" name="description"></textarea>
				</div>
				<div class="form-group">
					<button class="btn-primary btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
<% include ../partials/footer %>